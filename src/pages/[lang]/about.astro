<style>
    .skill-item {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        min-height: 2.5rem;
    }
    
    .skill-icon {
        transition: all 0.3s ease;
    }
    
    .skill-label {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 9px;
        font-family: monospace;
        opacity: 0;
        transform: scale(0.75);
        transition: all 0.3s ease;
        pointer-events: none;
    }
    
    /* Desktop: hover effect */
    @media (min-width: 768px) {
        .skill-item:hover .skill-icon {
            opacity: 0;
            transform: scale(0.75);
        }
        
        .skill-item:hover .skill-label {
            opacity: 1;
            transform: scale(1);
        }
        
        .skill-item:hover {
            z-index: 50;
        }
    }
    
    /* Active state for touch devices */
    .skill-item.active .skill-icon {
        opacity: 0;
        transform: scale(0.75);
    }
    
    .skill-item.active .skill-label {
        opacity: 1;
        transform: scale(1);
    }
</style>

<script>
    function initSkillItems() {
        const skillItems = document.querySelectorAll('.skill-item');
        
        skillItems.forEach(item => {
            const label = item.querySelector('.skill-label') as HTMLElement;
            const color = item.getAttribute('data-color') || '#22d3ee';
            
            if (label) {
                label.style.color = color;
            }
            
            item.addEventListener('click', (e) => {
                // Only activate click behavior on mobile/tablet sizes
                if (window.innerWidth >= 768) return;
                
                e.preventDefault();
                
                // Remove active from all other items
                skillItems.forEach(other => {
                    if (other !== item) other.classList.remove('active');
                });
                
                // Toggle active on this item
                item.classList.add('active');
                
                // Remove after 2 seconds
                setTimeout(() => {
                    item.classList.remove('active');
                }, 2000);
            });
        });
    }
    
    // Run on page load and after view transitions
    document.addEventListener('astro:page-load', initSkillItems);
</script>

