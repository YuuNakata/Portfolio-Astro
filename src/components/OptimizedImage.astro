---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  format?: "webp" | "avif" | "png" | "jpg";
  quality?: number;
  loading?: "lazy" | "eager";
  decoding?: "async" | "auto" | "sync";
  class?: string;
  priority?: boolean;
}

const {
  src,
  alt,
  width,
  height,
  format = "webp",
  quality = 85,
  loading = "lazy",
  decoding = "async",
  class: className = "",
  priority = false,
} = Astro.props;

// Si priority est√° activado, forzar eager loading
const finalLoading = priority ? "eager" : loading;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  format={format}
  quality={quality}
  loading={finalLoading}
  decoding={decoding}
  class={className}
/>
