{
  "framework": "astro",
  "buildCommand": "NODE_ENV=production astro check && astro build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "devCommand": "astro dev --host",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  
  "env": {
    "PUBLIC_SITE_NAME": "Raydel Ernesto Reuco Garc√≠a - Portfolio",
    "PUBLIC_DEFAULT_LANGUAGE": "es",
    "PUBLIC_ENABLE_ANIMATIONS": "true",
    "PUBLIC_ENABLE_DARK_MODE": "true",
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/:path*\\.(css|js|woff|woff2|ttf|eot|ico|png|jpg|jpeg|gif|svg|webp|avif)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/portfolio",
      "destination": "/#projects",
      "permanent": true
    },
    {
      "source": "/about",
      "destination": "/#about",
      "permanent": true
    },
    {
      "source": "/skills",
      "destination": "/#skills",
      "permanent": true
    },
    {
      "source": "/projects",
      "destination": "/#projects",
      "permanent": true
    },
    {
      "source": "/achievements",
      "destination": "/#achievements",
      "permanent": true
    },
    {
      "source": "/education",
      "destination": "/#education",
      "permanent": true
    },
    {
      "source": "/contact",
      "destination": "/#contact",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/keep-alive",
      "schedule": "0 9 * * *"
    }
  ],
  "regions": ["iad1"],
  "public": false,
  "github": {
    "silent": true
  }
}
